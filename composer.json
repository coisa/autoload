{
    "name": "coisa/autoload",
    "type": "library",
    "description": "PHP Class Autoloader",
    "license": "MIT",
    "authors": [
        {
            "name": "Felipe SayÃ£o Lobato Abreu",
            "email": "github@felipeabreu.com.br"
        }
    ],
    "require": {
        "php": ">=5.3",
        "coisa/exceptions": "^1.0",
        "coisa/factory": "^1.7",
        "composer/composer": "^2.0",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "coisa/php-cs-fixer": "^1.0",
        "php-parallel-lint/php-console-highlighter": "^0.3.2 || ^0.4",
        "php-parallel-lint/php-parallel-lint": "^1.0",
        "phpunit/phpunit": "^4.8 || ^7.0",
        "sensiolabs/security-checker": "^4.1",
        "squizlabs/php_codesniffer": "^2.9 || ^3.0"
    },
    "config": {
        "prefer-stable": true,
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "CoiSA\\Autoload\\": "src"
        },
        "files": [
            "config/autoload.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "CoiSA\\Autoload\\": "tests"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "check": [
            "@lint",
            "@test",
            "@sniff",
            "@cs-check"
        ],
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "lint": "parallel-lint --exclude vendor .",
        "sniff": "phpcs",
        "test": "phpunit --color=always"
    }
}
