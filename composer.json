{
    "name": "coisa/autoload",
    "type": "library",
    "description": "PHP Class Autoloader",
    "license": "MIT",
    "authors": [
        {
            "name": "Felipe Say√£o Lobato Abreu",
            "email": "github@felipeabreu.com.br"
        }
    ],
    "require": {
        "php": "^5.3|^7.0|^8.0",
        "composer-plugin-api": "^1.1|^2.1",
        "composer/composer": "^1.10|^2.2",
        "psr/log": "^1.1|^2.0"
    },
    "require-dev": {
        "coisa/factory": "^1.7",
        "coisa/php-cs-fixer": "^1.0",
        "phpspec/prophecy-phpunit": "^1.1",
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.9"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "CoiSA\\Autoload\\": "src/Autoload"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "analyze": "phpstan analyze",
        "check": [
            "@test",
            "@sniff",
            "@cs-check",
            "@analyze",
            "@docheader-check"
        ],
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "docheader-check": "docheader check ./src ./tests",
        "sniff": "phpcs",
        "test": "phpunit --color=always"
    },
    "extra": {
        "class": "CoiSA\\Autoload\\Plugin",
        "coisa": {
            "autoload": {
                "custom_path": "resources/coisa_autoload_classmap.php",
                "classmap": [
                    "tests/stubs/",
                    "/you/can/add/any/path/here/to/add/to/the/classmap/even/if/it/doesnt/exist/"
                ]
            }
        }
    }
}
